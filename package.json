{
  "name": "@sdb/monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:expo-playground": "turbo run dev --filter=@sdb/expo-playground",
    "dev:web-playground": "turbo run dev --filter=@sdb/web-playground",
    "dev:document-web": "turbo run dev --filter=@sdb/document-web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish:ui": "bun scripts/publish-ui.ts",
    "zip": "bun scripts/zip-project.ts"
  },
  "devDependencies": {
    "@clack/core": "^1.0.1",
    "@clack/prompts": "^1.0.1",
    "picocolors": "^1.1.1",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "turbo": "^2.8.7",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
